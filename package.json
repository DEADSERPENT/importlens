{
  "name": "importlens",
  "displayName": "ImportLens",
  "description": "Explainable, safe import cleanup for VS Code using LSP diagnostics",
  "version": "1.0.0",
  "publisher": "SAMARTHASMG14",
  "license": "MIT",
  "icon": "icon.png",

  "repository": {
    "type": "git",
    "url": "https://github.com/DEADSERPENT/importlens"
  },
  "homepage": "https://github.com/DEADSERPENT/importlens#readme",
  "bugs": {
    "url": "https://github.com/DEADSERPENT/importlens/issues"
  },

  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "import",
    "cleanup",
    "unused",
    "imports",
    "typescript",
    "python",
    "java",
    "rust",
    "go",
    "cpp",
    "c++",
    "c",
    "lsp",
    "diagnostics",
    "lens"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "importlens.cleanFile",
        "title": "ImportLens: Clean Current File"
      },
      {
        "command": "importlens.cleanWorkspace",
        "title": "ImportLens: Clean Workspace"
      },
      {
        "command": "importlens.showStats",
        "title": "ImportLens: Show Import Statistics"
      },
      {
        "command": "importlens.toggleSafeMode",
        "title": "ImportLens: Toggle Safe Mode"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "importlens.cleanFile",
          "group": "1_modification@1",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "importlens.cleanWorkspace",
          "group": "7_modification@1"
        }
      ]
    },
    "configuration": {
      "title": "ImportLens",
      "properties": {
        "importlens.enableOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically clean unused imports when saving a file"
        },
        "importlens.showExplanationTooltip": {
          "type": "boolean",
          "default": true,
          "description": "Show explanation tooltips for unused imports"
        },
        "importlens.safeMode": {
          "type": "boolean",
          "default": true,
          "description": "Preserve side-effect imports (recommended)"
        },
        "importlens.aggressiveMode": {
          "type": "boolean",
          "default": false,
          "description": "Remove all unused imports including potential side-effects"
        },
        "importlens.showDiffBeforeApply": {
          "type": "boolean",
          "default": true,
          "description": "Show diff preview before applying changes"
        },
        "importlens.excludedLanguages": {
          "type": "array",
          "default": [
            "markdown",
            "plaintext"
          ],
          "description": "Languages to exclude from import cleaning"
        },
        "importlens.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/out/**",
            "**/*.min.js"
          ],
          "description": "File patterns to exclude from import cleaning"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.x",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0"
  }
}
